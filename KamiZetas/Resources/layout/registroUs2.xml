<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Registro Usuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10.0dp"
        android:textSize="30dp" />
    <TextView
        android:text=""
        android:layout_width="85.5dp"
        android:layout_height="80.7dp"
        android:textAlignment="center"
        android:background="@drawable/user"
        android:id="@+id/textView3"
        android:layout_marginBottom="17.1dp"
        android:layout_marginLeft="150.2dp" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="527.6dp"
            android:id="@+id/linearLayout1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre y Apellido"
                android:id="@+id/editText1" />
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cedula"
                android:id="@+id/editText2" />
            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:id="@+id/editText3" />
            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:id="@+id/editText4" />
            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion"
                android:id="@id/editText5" />
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono"
                android:id="@+id/editText6" />
            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/editText7" />
            <Button
                android:text="Agregar"
                android:layout_width="146.5dp"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_gravity="center" />
            <Button
                android:text="Editar"
                android:layout_width="146.5dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/holo_orange_light" />
            <Button
                android:text="Eliminar"
                android:layout_width="146.5dp"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/holo_red_light" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
 
