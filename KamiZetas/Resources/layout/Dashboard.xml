<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Categorias de Camisetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:layout_marginTop="10.9dp" />
    <ImageButton
        android:layout_width="137.8dp"
        android:layout_height="135.6dp"
        android:id="@+id/imageButton1"
        android:src="@drawable/jers1"
        android:background="@android:color/transparent"
        android:layout_marginTop="78.6dp"
        android:foregroundGravity="center_vertical|center"
        android:layout_gravity="center" />
    <TextView
        android:text="Nacionales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:id="@+id/textView3" />
    <ImageButton
        android:layout_width="137.8dp"
        android:layout_height="135.6dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/jers2"
        android:background="@android:color/transparent"
        android:layout_marginTop="23.3dp"
        android:foregroundGravity="center_vertical|center"
        android:layout_gravity="center" />
    <TextView
        android:text="Internacionales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:id="@+id/textView4" />
    <ImageButton
        android:layout_width="137.8dp"
        android:layout_height="135.6dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/jers3"
        android:background="@android:color/transparent"
        android:layout_marginTop="23.3dp"
        android:foregroundGravity="center_vertical|center"
        android:layout_gravity="center" />
    <TextView
        android:text="Ediciones Especiales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:id="@+id/textView5" />
</LinearLayout>
